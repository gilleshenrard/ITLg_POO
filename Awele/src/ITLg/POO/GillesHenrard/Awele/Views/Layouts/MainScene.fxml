                        <Label prefHeight="Infinity" prefWidth="Infinity" text="Label"/>
                    </children>
                </StackPane>
                <StackPane prefHeight="150.0" prefWidth="200.0" GridPane.columnIndex="4" GridPane.rowIndex="2"
                           styleClass="slotpl1">
                    <children>
                        <Circle radius="110.0"/>
